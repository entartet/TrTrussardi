<Window x:Class="TrTrussardi.MainForUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrTrussardi"
        mc:Ignorable="d"
        Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="4">
            <RadioButton Checked="RadioButton_Checked"  Style="{StaticResource MaterialDesignTabRadioButton}"  Margin="4" Content="Выполнить заказ" Name="MakeOrder"/>
            <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}" Margin="4"  Content="Готовые заказы" />
            <RadioButton Style="{StaticResource MaterialDesignTabRadioButton}" Margin="4"  Content="Что то еще" />
        </StackPanel>
        <Frame Grid.Row="1" Name="Frame1"/>
    </Grid>
</Window>
