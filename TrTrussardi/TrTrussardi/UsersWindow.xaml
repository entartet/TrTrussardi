<Window x:Class="TrTrussardi.UsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrTrussardi"
        mc:Ignorable="d"
        Height="300" FontSize="14" Margin="5" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <TextBlock Margin="10 5 10 0">Логин</TextBlock>
            <TextBox Margin="10 5 10 0" Name="textLogin"></TextBox>
            <TextBlock Margin="10 5 10 0">Пароль</TextBlock>
            <TextBox Margin="10 5 10 0" Name="textPass"></TextBox>
            <TextBlock Margin="10 5 10 0">Псевдоним</TextBlock>
            <TextBox Margin="10 5 10 0" Name="textName"></TextBox>
            <StackPanel Margin="10 5 10 0" Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center">Должность</TextBlock>
                <ComboBox  Margin="8 0 0 0"  DisplayMemberPath="Name" SelectedValuePath="PositionId" Name="ComboPosition" />
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Margin="10" Orientation="Horizontal">
                <Button Click="Button_Click_1">Отмена</Button>
                <Button Click="Button_Click">Сохранить</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
